pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        git 'git@github.com:joshua-mnz/College.git'
      }
    }

    stage('Build Docker Image') {
      steps {
        sh 'docker build -t myapp:latest .'
      }
    }

    stage('Run Container') {
      steps {
        sh '''
          docker rm -f myapp || true
          docker run -d -p 8081:8080 --name myapp myapp:latest
        '''
      }
    }
  }
}

