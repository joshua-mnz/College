pipeline {
    agent any
    triggers{
    pollSCM '* * * * *'
}
    stages {
        stage('Checkout') {
            steps {
               
                git branch: 'main', url: 'https://github.com/joshua-mnz/College'
            }
        }
     
 stage('Run Python') { 
            steps {
                echo 'Running Python program...'
                sh 'python3 hello.py'
            }
        }
}
    post {
        success {
            echo 'Build and execution successful!'
        }
        failure {
            echo 'Build failed!!!'
        }
    }
}
